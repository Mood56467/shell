#method one...

$action = New-ScheduledTaskAction -Execute 'WILDCARD'
$trigger =  New-ScheduledTaskTrigger -AtStartUp
Register-ScheduledTask -Action $action -Trigger $trigger -TaskName "winsysstart" -Description "Daily dump of Applog"

